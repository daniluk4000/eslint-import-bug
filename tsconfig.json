{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "outDir": "dist",
    "declarationDir": "dist",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "types": [
      "@types/node",
    ],
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
  ]
}
